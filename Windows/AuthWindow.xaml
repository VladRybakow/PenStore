<Window x:Class="PenStore.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PenStore.Windows"  WindowStyle="None" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" MinHeight="500" MinWidth="300" MaxHeight="1000" MaxWidth="600"
        Title="AuthWindow" Height="500" Width="300">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>


        <Label Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="6" 
               HorizontalAlignment="Center"  VerticalAlignment="Center" 
               Content="Логин" FontSize="20" FontFamily="Verdana" FontWeight="Bold"/>

        <TextBox Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="6" Name="TBL" TextWrapping="Wrap"
                 HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="14"/>

        <Label Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="6" 
               HorizontalAlignment="Center"  VerticalAlignment="Center" 
               Content="Пароль" FontSize="20" FontFamily="Verdana" FontWeight="Bold"/>

        <TextBox Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="6" Name="TBP" TextWrapping="Wrap"
                 HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="14"/>

        <Button Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="6" Margin="5"
                Content="Авторизация" FontSize="16" Click="AuthBTN"
                FontFamily="Verdana" FontWeight="Bold"/>

        <Button Grid.Row="8" Grid.Column="2" Grid.ColumnSpan="6" Margin="5"
                Content="Регистрация" FontSize="16" Click="ReqWindows"
                FontFamily="Verdana" FontWeight="Bold"/>

        <Button Grid.Column="9" Margin="5"
                Content="Х" FontSize="14" Click="ExitBTN"
                FontFamily="Verdana" FontWeight="Bold"/>

    </Grid>
</Window>
